{
	"manifest_version": 2,

	"name": "Stoofoo Post Preview",
	"description": "Adds a post preview to the stoofoo post textbox",
	"version": "0.1",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"activeTab",
		"https://*/*",
		"http://*/*"
	]
}
